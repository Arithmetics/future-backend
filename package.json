{
  "name": "future-backend",
  "version": "1.0.0",
  "description": "Starter kit for future of my backends",
  "repository": "https://github.com/arithmetics/future-backend",
  "author": "arithmetics <brock.m.tillotson@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server.ts",
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "yarn run clean && yarn run generate && tsc",
    "lint": "eslint src/**/**/*.ts tests/**/**/*.ts",
    "tsc": "tsc",
    "generate": "yarn run generate:prisma && yarn run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "yarn run generate",
    "migrate:save": "dotenv -e ./dotenv/dev.env -- prisma migrate save --experimental",
    "migrate:up": "dotenv -e ./dotenv/dev.env -- prisma migrate up --experimental",
    "migrate:down": "dotenv -e ./dotenv/dev.env -- prisma migrate down 1 --experimental"
  },
  "dependencies": {
    "@nexus/schema": "0.15.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.0",
    "apollo-server": "2.17.0",
    "bcryptjs": "^2.4.3",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.3.5",
    "graphql-subscriptions": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.25.0",
    "nexus-plugin-prisma": "0.17.0"
  },
  "devDependencies": {
    "@types/graphql-iso-date": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.6"
  }
}
